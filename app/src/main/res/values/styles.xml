<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextView.TitleStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.SubtitleStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/blue_grey_500</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.ErrorStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">?colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LoaderStyle" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="colorAccent">?colorPrimary</item>
    </style>

</resources>